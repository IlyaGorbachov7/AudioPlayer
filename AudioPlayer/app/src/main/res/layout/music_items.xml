<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="#F5111111"
    android:id="@+id/audio_item">

    <TextView
        android:id="@+id/number_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:text="id"
        android:textColor="@color/color_MY"
        android:gravity="center"

        />
    <ImageView
        android:id="@+id/music_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:padding="1dp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/number_item"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/music_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/music_img"
        android:layout_marginLeft="5dp"
        android:text="File Name"
        android:textColor="@color/color_MY"
        android:textStyle="italic" />

</RelativeLayout>